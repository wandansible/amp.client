% {{ ansible_managed }}

[
  {rabbit, [
    {tcp_listen_options,
         [
         {backlog,       128},
         {nodelay,       true},
         {linger,        {true, 0}},
         {exit_on_close, false}]
    },
    {tcp_listeners, [
        {% if amp_local_rabbitmq_address is defined %}
        {"{{ amp_local_rabbitmq_address }}", 5672},
        {% endif %}
        {"localhost", 5672}
    ]},
    {auth_mechanisms, ['PLAIN']},
    {log_levels, [{connection, error}]},
    {default_user, <<"guest">>},
    {default_pass, <<"guest">>}
  ]},
  {kernel, [

  ]}
,
% Additional config
  {amqp_client, [{ssl_options, [ {versions, ['tlsv1.2']}, {server_name_indication, "{{ amp_collector }}"}, {ciphers,[ {ecdhe_ecdsa,aes_256_gcm,null,sha384}, {ecdhe_rsa,aes_256_gcm,null,sha384}, {ecdhe_ecdsa,aes_128_gcm,null,sha256}, {ecdhe_rsa,aes_128_gcm,null,sha256}, {ecdhe_ecdsa,aes_256_cbc,sha384,sha384}, {ecdhe_rsa,aes_256_cbc,sha384,sha384}, {ecdhe_ecdsa,aes_128_cbc,sha256,sha256}, {ecdhe_rsa,aes_128_cbc,sha256,sha256} ]} ]}]}
].
